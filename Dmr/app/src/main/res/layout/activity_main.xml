<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yt">

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/view_color_c" />

    <include
        android:id="@+id/layout_menu_bottom"
        layout="@layout/title_bottom_layout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_menu_bottom"
        android:layout_gravity="center"
        android:background="@color/white" />

</RelativeLayout>
